<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_thumbnail_chatRoom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_roomName_chatRoom"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_thumbnail_chatRoom"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="신영환/SGS DevCamp" />

    <TextView
        android:id="@+id/tv_unreadMsgCnt_chatRoom"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_unread_msg"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/tv_roomName_chatRoom"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_lastMsg_chatRoom"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/iv_thumbnail_chatRoom"
        app:layout_constraintTop_toBottomOf="@id/tv_roomName_chatRoom"
        tools:text="안녕하세요!" />

    <ImageView
        android:id="@+id/iv_favorite_chatRoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_outline_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>